<div class="container">
  <div class="row">
    <div class="col-md-8">
      <%= image_tag @post.img %>
      <h1><%= @post.title %></h1>
      <p><%= @post.content %></p>
      <%= link_to 'Back', root_path %>

      <br>
      <br>
      <%= social_share_button_tag(@post.title) %>
      <br>
      <br>
      <%= render 'comments' %>
    </div>
    <div class="col-md-4" id="recent">
      <h1>Recent Posts</h1>
      <ul>
        <li>
          <%= image_tag @post.img %>
          <h2>
            <%= link_to @post.title %>
          </h2>
        </li>
      </ul>
    </div>
  </div>
  <!-- <%= link_to "Edit", edit_post_path(@post) %>
  <%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure you want to delete this post?"} %> -->

</div>
