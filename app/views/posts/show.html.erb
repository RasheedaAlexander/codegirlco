<div class="container">
  <div class="row">
    <div class="col-md-8">
      <%= image_tag @post.img %>
      <h1><%= @post.title %></h1>
      <%= raw @post.content %>
      <!-- <%= link_to 'Back', root_path %> -->

      <% if user_signed_in? %>
      <div class="admin_links">
        <%= link_to 'Edit', edit_post_path(@post) %>
        <%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure you want to delete this post?"} %>
      </div>
      <% end %>

      <br>
      <br>
      <%= render_shareable %>
      <br>
      <br>
      <%= render 'comments' %>
    </div>
